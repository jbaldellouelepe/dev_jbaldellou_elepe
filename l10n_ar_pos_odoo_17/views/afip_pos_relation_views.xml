<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- ========================================================================================================
        AFIP POS Relation
        model: afip.pos.relation
        ========================================================================================================= -->

        <!-- Form View -->
        <record id="afip_pos_relation_view_form" model="ir.ui.view">
            <field name="name">afip.pos.relation.view.form</field>
            <field name="model">afip.pos.relation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="responsibility_id"/>
                            <field name="pos_journal_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="afip_pos_relation_view_tree" model="ir.ui.view">
            <field name="name">afip.pos.relation.view.tree</field>
            <field name="model">afip.pos.relation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="responsibility_id"/>
                    <field name="pos_journal_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="afip_pos_relation_action" model="ir.actions.act_window">
            <field name="name">AFIP POS Parameters</field>
            <field name="res_model">afip.pos.relation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="afip_pos_relation_menu"
                  name="AFIP POS Relations"
                  parent="l10n_ar.menu_afip_config"
                  action="afip_pos_relation_action"
                  sequence="99"
        />
    </data>
</odoo>
